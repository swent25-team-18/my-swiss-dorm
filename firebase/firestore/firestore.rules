rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /profiles/{uid} {
        allow delete: if request.auth.uid == resource.data.ownerId;
        allow write: if request.auth.uid == request.resource.data.ownerId;
        allow read: if true;
    }
    match /rental_listings/{uid} {
        allow create: if request.auth != null
                      && request.resource.data.ownerId == request.auth.uid;
        allow write: if request.auth.uid == resource.data.ownerId;
        allow update, delete: if request.auth.uid == resource.data.ownerId;
        allow read: if true;
    }

    match /{collection} {
      allow read, write: if true;
    }
    match /universities/{universityId} {
      allow read, write: if true;
    }
    match /residencies/{residencyId} {
      allow read, write: if true;
    }
    match /cities/{cityId} {
        allow read, write: if true;
    }
    match /admins/{email} {
       allow read: if true;
       allow write: if true;
        }
    match /reviews/{reviewId} {
        allow create: if request.auth != null
                      && request.resource.data.ownerId == request.auth.uid;
        allow write: if request.auth.uid == resource.data.ownerId;
        // Owners can update any field, other authenticated users can only update vote fields
        allow update: if request.auth != null
                     && (request.auth.uid == resource.data.ownerId
                         || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotedBy', 'downvotedBy'])
                             && request.resource.data.ownerId == resource.data.ownerId));
        allow delete: if request.auth.uid == resource.data.ownerId;
        allow read: if true;
    }
    match /requestedMessages/{messageId} {
        // Users can create requested messages where they are the sender
        allow create: if request.auth != null
                      && request.resource.data.fromUserId == request.auth.uid;
        // Users can read messages where they are the sender or receiver
        allow read: if request.auth != null
                    && (resource.data.fromUserId == request.auth.uid
                        || resource.data.toUserId == request.auth.uid);
        // Users can update messages where they are the receiver (to approve/reject)
        allow update: if request.auth != null
                      && resource.data.toUserId == request.auth.uid;
        // Users can delete their own sent messages (optional, for cleanup)
        allow delete: if request.auth != null
                      && resource.data.fromUserId == request.auth.uid;
    }
    match /config/{allPath=**} {
        allow read, write: if true;
    }
  }
}